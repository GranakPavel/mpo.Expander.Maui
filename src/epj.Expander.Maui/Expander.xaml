<?xml version="1.0" encoding="utf-8" ?>
<ContentView
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Class="epj.Expander.Maui.Expander"
  x:Name="ExpanderControl">

  <ContentView.ControlTemplate>
    <ControlTemplate>
      <VerticalStackLayout
        IsClippedToBounds="True">
        <ContentView
          ZIndex="500"
          VerticalOptions="Start"
          HorizontalOptions="Fill"
          Content="{Binding HeaderContent, Source={x:Reference ExpanderControl}}">
          <ContentView.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnHeaderContentTapped" />
          </ContentView.GestureRecognizers>
        </ContentView>
        <ContentPresenter
          x:Name="ExpanderContent"
          ZIndex="0"
          VerticalOptions="Start"
          HorizontalOptions="Fill"
          IsVisible="{Binding IsExpanded, Source={x:Reference ExpanderControl}}" />
      </VerticalStackLayout>
    </ControlTemplate>
  </ContentView.ControlTemplate>

</ContentView>
